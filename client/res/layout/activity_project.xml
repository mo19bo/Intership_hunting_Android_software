<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="项目名称"
           style="@style/text_Style2"/>

        <TextView
            android:id="@+id/projectname"
            style="@style/text_Style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入名称"
          
            android:textSize="20sp" />

    </LinearLayout>

     <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView7"
            style="@style/text_Style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="担任角色" />

        <TextView
            android:id="@+id/projectrole"
            style="@style/text_Style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入名称" />

    </LinearLayout>

      <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="开始时间"
            style="@style/text_Style2" />

        <TextView
            android:id="@+id/edu_startyear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择时间"
           style="@style/text_Style1"/>

    </LinearLayout>
     <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="结束时间"
            style="@style/text_Style2"/>

        <TextView
            android:id="@+id/edu_endyears2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择时间"
            style="@style/text_Style1" />

    </LinearLayout>
     <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="内容描述"
            style="@style/text_Style2" />

        <EditText
            android:id="@+id/editText1_project_content"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:background="@drawable/edit_style"
            android:ems="10"
            android:gravity="center_vertical|top"
            android:hint="请输入基本描述......"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>
    </LinearLayout>
</LinearLayout>
