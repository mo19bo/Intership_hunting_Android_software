<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:background="@drawable/personal_bg2"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/resume_avator"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/avator" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical" >

                        <TextView
                            android:id="@+id/resume_usernane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.49"
                            android:text="李某某"
                            android:textColor="@drawable/font_color_actionbar"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:gravity="center_horizontal|center_vertical" >

                            <Button
                                android:id="@+id/button_modified"
                                android:layout_width="19dp"
                                android:layout_height="18dp"
                                android:background="@drawable/edit" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="编辑"
                                android:textColor="@drawable/font_color_actionbar" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/resume_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="女"
                                android:textColor="@drawable/font_color_actionbar" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="|"
                                android:textColor="@drawable/font_color_actionbar" />

                            <TextView
                                android:id="@+id/graduate_resume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1992"
                                android:textColor="@drawable/font_color_actionbar" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/resume_eduaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="6dp"
                                android:text="四川大学|软件工程|本科"
                                android:textColor="@drawable/font_color_actionbar" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/tel" />

                            <TextView
                                android:id="@+id/resume_tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:text="18681273519"
                                android:textColor="@drawable/font_color_actionbar" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="13dp"
                                android:layout_height="15dp"
                                android:src="@drawable/email" />

                            <TextView
                                android:id="@+id/resume_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="1046219417@qq.com"
                                android:textColor="@drawable/font_color_actionbar" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/text_fliter"
                        android:gravity="center_vertical"
                        android:text="期望实习"
                        android:textColor="@drawable/font_color_title"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/excepted_intern"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:hint="您还有没有填写哦~~" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/text_fliter"
                        android:gravity="center_vertical"
                        android:text="教育经历"
                        android:textColor="@drawable/font_color_title"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" >

                    <TextView
                        android:id="@+id/addexpedu"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/add_btn"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="添加教育经历"
                        android:textColor="@drawable/font_color_title"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edulayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/listViewedu"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:fadingEdge="none"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="none" >

                    </ListView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/text_fliter"
                        android:gravity="center_vertical"
                        android:text="实习经历"
                        android:textColor="@drawable/font_color_title"
                        android:textSize="18sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/addinternships"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/add_btn"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="10dp"
                        android:text="添加实习经历"
                        android:textColor="@drawable/font_color_title"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/internlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    android:textColor="@drawable/font_color_title" >

                    <ListView
                        android:id="@+id/listViewintern"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="none"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="none" >

                    </ListView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/text_fliter"
                        android:gravity="center_vertical"
                        android:text="校园经历"
                        android:textColor="@drawable/font_color_title"
                        android:textSize="18sp" />

                </LinearLayout>
<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/addschoolexp"
                        android:layout_width="150dp"
                        android:textColor="@drawable/font_color_title"
                        android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                        android:text="添加校园经历"
                        android:drawableLeft="@drawable/add_btn"
          android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="18sp"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical" >

                    <LinearLayout
                    android:id="@+id/schoollayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/listViewschool"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="none"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="none" >

                    </ListView>

                </LinearLayout>

                </LinearLayout>

            </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/text_fliter"
                        android:gravity="center_vertical"
                        android:text="项目经验"
                        android:textColor="@drawable/font_color_title"
                        android:textSize="18sp" />

                </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/addprojectexp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/add_btn"
         android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="18sp" 
            android:layout_marginLeft="20dp"
        android:text="添加项目经验"
        android:textColor="@drawable/font_color_title"
        />
</LinearLayout>

               <LinearLayout
                   android:id="@+id/projectlayout"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_marginLeft="30dp"
                   android:orientation="vertical" >

                    <ListView
                        android:id="@+id/listViewproject"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="none"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="none" >

                    </ListView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="fill_vertical|center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/moreBtn"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_button"
                    android:text="更多资料填写（可选）"
                    android:textColor="@drawable/font_color_actionbar" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>