<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="期望城市"
          style="@style/text_Style2" />

        <TextView
            android:id="@+id/exceptedcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="请选择地点"
            android:textColor="@drawable/font_color1"
            style="@style/text_Style1"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="每周期望上班时间"
            style="@style/text_Style2"/>

        <TextView
            android:id="@+id/excepteddayweeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/font_color1"
            android:hint="请选择时间"
            style="@style/text_Style1"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="可实习时间"
           style="@style/text_Style2"/>

        <TextView
            android:id="@+id/interntime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/font_color1"
            android:hint="请选择时间"
            style="@style/text_Style1" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="期望岗位"
           style="@style/text_Style2" />

        <TextView
            android:id="@+id/textview_excepted_type"
            style="@style/text_Style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="请输入期望岗位"
            android:textColor="@drawable/font_color1" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="期望职位"
          style="@style/text_Style2" />

        <TextView
            android:id="@+id/exceptedjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/font_color1"
            android:hint="请填写-如：产品经理"
             style="@style/text_Style1" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="期望薪资"
           style="@style/text_Style2"/>

        <TextView
            android:id="@+id/exceptedearings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/font_color1"
            android:hint="请填写"
            style="@style/text_Style1"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            
            android:text="预计到岗时间"
           style="@style/text_Style2"/>

        <TextView
            android:id="@+id/exceptedworktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/font_color1"
            android:hint="请选择时间"
           style="@style/text_Style1" />

    </LinearLayout>
</LinearLayout>
