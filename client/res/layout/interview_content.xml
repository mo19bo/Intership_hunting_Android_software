<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/radius_button_half"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="通知面试"
            android:textColor="@drawable/font_color_actionbar"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="主  题："
                    android:textColor="@drawable/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/internview_maintheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ioskaifashixisnghui "
                    android:textColor="@drawable/font_color_grey"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="面试时间："
                    android:textColor="@drawable/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/internview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ioskaifashixisnghui "
                    android:textColor="@drawable/font_color_grey"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="面试地点："
                    android:textColor="@drawable/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/internview_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ioskaifashixisnghui "
                    android:textColor="@drawable/font_color_grey"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="联系人："
                    android:textColor="@drawable/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/internview_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ioskaifashixisnghui "
                    android:textColor="@drawable/font_color_grey"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="联系电话："
                    android:textColor="@drawable/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/internview_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:text="ioskaifashixisnghui "
                    android:textColor="@drawable/font_color_grey"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:gravity="left" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="补充内容："
                    android:textColor="@drawable/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/internview_addtion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                   
                    android:text="ioskaifashixisnghui "
                    android:textColor="@drawable/font_color_grey"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fininsh"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/radius_button_half_bottom"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="我知道了"
            android:textColor="@drawable/font_color_title"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>