<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="头像"
            style="@style/text_Style2"/>

        <ImageView
            android:id="@+id/imageView1_avator"
            android:layout_width="37dp"
            android:layout_height="46dp"
            android:layout_weight="0.01"
            android:src="@drawable/abc_ab_stacked_solid_dark_holo" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="昵 称（登录名）"
           style="@style/text_Style2" />

        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/font_color1"
            android:hint="请输入昵称"
            style="@style/text_Style1" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|center_horizontal|start|end" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="姓 名"
           style="@style/text_Style2" />

        <TextView
            android:id="@+id/realname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/font_color1"
            android:hint="请输入真实姓名"
            
            style="@style/text_Style1" />
    </LinearLayout>
<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:gravity="center_vertical" >

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="0.75"
             android:text="性 别"
             style="@style/text_Style2"/>

         <TextView
             android:id="@+id/sex_label"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="请选择性别"
             android:text="男"
             android:textColor="@drawable/font_color1"
             style="@style/text_Style1"/>

     </LinearLayout>
<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:gravity="center_horizontal|center_vertical" >

          <TextView
              android:id="@+id/textView5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1.18"
              android:text="手机号"
              style="@style/text_Style2"/>

          <TextView
              android:id="@+id/tel_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:textColor="@drawable/font_color1"
            android:hint="请填写手机号"
           
            style="@style/text_Style1" />
      </LinearLayout>
<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:gravity="center_horizontal|center_vertical" >

          <TextView
              android:id="@+id/textView6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="邮  箱"
             style="@style/text_Style2" />

          <TextView
              android:id="@+id/email_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                android:textColor="@drawable/font_color1"
            android:hint="请填写邮 箱"
           
              style="@style/text_Style1" />
      </LinearLayout>
<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:gravity="center_horizontal|center_vertical" >

          <TextView
              android:id="@+id/textView7"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.52"
              android:text="毕业院校"
             style="@style/text_Style2"/>

          <TextView
              android:id="@+id/school_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="20dp"
                android:textColor="@drawable/font_color1"
               android:hint="请填写毕业院校"
           
              style="@style/text_Style1"/>

      </LinearLayout>
<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:gravity="center_horizontal|center_vertical" >

          <TextView
              android:id="@+id/textView10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.43"
              android:text="毕业年份"
             style="@style/text_Style2" />

          <TextView
              android:id="@+id/graduate_year_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="100dp"
                  android:textColor="@drawable/font_color1"
               android:hint="请填写毕业年份"
           
              style="@style/text_Style1"/>

      </LinearLayout>
      <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:gravity="center_horizontal|center_vertical" >

          <TextView
              android:id="@+id/textView9"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.52"
              android:text="专 业"
               style="@style/text_Style2" />

          <TextView
              android:id="@+id/major_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="20dp"
              android:textColor="@drawable/font_color1"
               android:hint="请填写相关专业"
             style="@style/text_Style1" />

      </LinearLayout>
      <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/font_color_grey" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:gravity="center_horizontal|center_vertical" >

          <TextView
              android:id="@+id/textView11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.52"
              android:text="学 历"
              style="@style/text_Style2"/>

          <TextView
              android:id="@+id/degree_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="20dp"
              android:textColor="@drawable/font_color1"
               android:hint="请填写学历"
              style="@style/text_Style1"/>

      </LinearLayout>
</LinearLayout>
